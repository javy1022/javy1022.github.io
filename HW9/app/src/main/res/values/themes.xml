<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HW9" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/header_color</item>
        <!-- Custom autocomplete dropdown scrollbar color -->
        <item name="android:dropDownListViewStyle">@style/Theme.HW9.DropDownListView</item>

    </style>

    <style name="Theme.HW9.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HW9.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HW9.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="twitter_circle_background">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.HW9.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:scrollbarThumbVertical">@color/green</item>
    </style>

</resources>